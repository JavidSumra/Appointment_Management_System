<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navigation</title>
  </head>
  <body>
    <div class="bg-slate-200 m-6 rounded">
      <% if(messages && messages.error && messages.error.length != 0) { %>
      <div
        style="
          background-color: #fee2e2;
          border-color: #f87171;
          color: #ef4444;
          border-radius: 3px;
          position: relative;
          padding: 10px;
          text-align: center;
          margin-bottom: 20px;
        "
        role="alert"
      >
        <strong> <%=messages.error %> </strong>
      </div>
      <% } %> <% if(messages && messages.success && messages.success.length !=
      0) { %>
      <div
        style="
          background-color: #ecfccb;
          border-color: #a3e635;
          color: #84cc16;
          border-radius: 3px;
          position: relative;
          padding: 10px;
          text-align: center;
          margin-bottom: 20px;
        "
        role="alert"
      >
        <strong> <%=messages.success %> </strong>
      </div>
      <% } %>
      <div class="flex flex-row mx-6 items-center">
        <div
          class="text-3xl font-medium border-2 border-y-0 border-l-0 border-slate-400 p-5"
        >
          Hello <%=findUser.firstName%>,
        </div>
        <div
          class="m-5 text-xl font-medium border-2 border-y-0 border-l-0 border-slate-400 p-2.5"
        >
          <span class="block text-2xl">Today</span
          ><span class="text-blue-600 text-2xl mr-4" id="date"></span>
        </div>
        <div
          class="text-xl font-medium border-2 border-y-0 border-l-0 border-slate-400 p-2.5"
        >
          <span class="block text-2xl">Time</span
          ><span class="text-blue-600 text-2xl mr-8" id="time"></span>
        </div>
        <div class="ml-80">
          <div
            class="text-2xl bg-slate-100 font-medium border rounded-full p-4 duration-300 hover:shadow-2xl cursor-pointer"
          >
            <a href="/AddAppointment">Add Appointment</a>
          </div>
        </div>
        <div
          class="ml-10 text-2xl bg-slate-100 font-medium border rounded-lg p-4 duration-300 hover:shadow-2xl cursor-pointer"
        >
          <a href="/Signout"> Signout </a>
        </div>
      </div>
    </div>
    <script>
      let InsertDate = document.querySelector("#date");
      let InsertTime = document.querySelector("#time");

      function TimeChanger() {
        let dateObj = new Date();
        InsertDate.innerHTML = dateObj.toLocaleDateString("en-In");
        InsertTime.innerHTML = dateObj
          .toLocaleTimeString("en-In", {
            hour12: true,
            hour: "2-digit",
            minute: "2-digit",
          })
          .toLocaleUpperCase();
      }
      setInterval(TimeChanger, 1000);
    </script>
  </body>
</html>
